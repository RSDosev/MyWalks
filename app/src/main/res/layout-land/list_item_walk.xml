<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFF0"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/ic_directions_walk_big" />

    <TextView
        android:id="@+id/text_view_distance"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_view_icon"
        android:layout_below="@+id/image_view_icon"
        android:text="3000m"
        android:layout_marginBottom="-3dp"
        android:gravity="center_horizontal|bottom"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_start_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/image_view_icon"
        android:layout_toRightOf="@+id/image_view_icon"
        android:text="@string/label_walk_start_time"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button_navigate_to_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_start_time_label"
        android:layout_toRightOf="@+id/text_view_start_time_label"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/text_view_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday, July 11, 2017"
        android:textSize="12sp"
        android:layout_below="@+id/text_view_start_time_label"
        android:layout_toEndOf="@+id/image_view_icon" />


    <TextView
        android:id="@+id/text_view_end_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_start_time_label"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/text_view_start_time"
        android:layout_toRightOf="@+id/text_view_start_time"
        android:text="@string/label_walk_end_time"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button_navigate_to_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_end_time_label"
        android:layout_toRightOf="@+id/text_view_end_time_label"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_location" />


    <TextView
        android:id="@+id/text_view_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view_end_time_label"
        android:layout_below="@+id/text_view_end_time_label"
        android:text="Tuesday, July 11, 2017"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_aesthetic_view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignLeft="@+id/text_view_start_time_label"
        android:layout_alignStart="@+id/text_view_start_time_label"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:background="@color/accent" />

    <TextView
        android:id="@+id/text_view_max_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_end_time_label"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/text_view_end_time"
        android:layout_toRightOf="@+id/text_view_end_time"
        android:text="@string/label_walk_max_speed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_max_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_view_max_speed_label"
        android:layout_below="@+id/text_view_max_speed_label"
        android:text="10 km/h"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_view_average_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/text_view_max_speed_label"
        android:layout_toRightOf="@+id/text_view_max_speed_label"
        android:text="@string/label_walk_average_speed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_average_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-3dp"
        android:layout_alignLeft="@+id/text_view_average_speed_label"
        android:layout_below="@+id/text_view_average_speed_label"
        android:text="10 km/h"
        android:textSize="12sp" />

</RelativeLayout>