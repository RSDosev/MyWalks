<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFF0"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_location" />

    <TextView
        android:id="@+id/text_view_start_time_label"
        android:layout_width="wrap_content"
        android:text="@string/label_walk_start_time"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="13dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/image_view_icon"
        android:layout_toRightOf="@+id/image_view_icon" />

    <TextView
        android:id="@+id/text_view_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday, July 11, 2017"
        android:layout_alignTop="@+id/text_view_start_time_label"
        android:layout_toEndOf="@+id/text_view_start_time_label"
        android:layout_toRightOf="@+id/text_view_start_time_label" />


    <TextView
        android:id="@+id/text_view_end_time_label"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="8dp"

        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:text="@string/label_walk_end_time"
        android:layout_below="@+id/text_view_start_time_label"
        android:layout_toEndOf="@+id/image_view_icon"
        android:layout_toRightOf="@+id/image_view_icon" />

    <TextView
        android:id="@+id/text_view_end_time"
        android:layout_width="wrap_content"
        android:text="Tuesday, July 11, 2017"
        android:layout_alignTop="@+id/text_view_end_time_label"
        android:layout_toEndOf="@+id/text_view_end_time_label"
        android:layout_toRightOf="@+id/text_view_end_time_label"
        android:layout_height="wrap_content" />

</RelativeLayout>